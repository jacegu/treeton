require 'treeton/grammar/array'
require 'treeton/grammar/number'
require 'treeton/grammar/string'

module Treeton
  grammar Value
    include Array
    include Number
    include String

    rule value
      string / number / array / true / false / null
    end

    rule array
      '[' value? (comma value)* ']'
    end

    rule true
      'true'
    end

    rule false
      'false'
    end

    rule null
      'null'
    end
  end
end
