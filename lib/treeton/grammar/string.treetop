module Treeton
  grammar String

    rule string
      quotation_mark (escaped_character / character)* quotation_mark
    end

    rule quotation_mark
      [\s]* '"' [\s]*
    end

    rule character
      !'"' !'\\' .
    end

    rule escaped_character
      '\"' / '\/' / '\\\\' / '\b'/ '\f' / '\n' / '\r' / '\t' / hexadecimal
    end

    rule hexadecimal
      '\u' [a-fA-F0-9] 4..4
    end

  end
end
